    function deleteMember(username) {
        var projectID = "{{id}}";

        // Envía una solicitud AJAX al servidor
        $.ajax({
            url: '/deleteMember',
            type: 'POST',
            data: { username: username, projectID: projectID },
            success: function (response) {
                // Si la solicitud es exitosa, redirige al usuario
